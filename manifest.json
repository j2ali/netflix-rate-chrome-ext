{
    "manifest_version": 2,
    "name" : "Netflix Rate",
    "version" : "1.3.15",
    "description" : "Add IMDB and Rotten Tomato ratings to the Netflix webpage.",
    "browser_action" : {
        "default_icon" : "img/logo.png",
        "default_title" : "Netflix Rate",
        "default_popup" : "popup.html"
        },
    "content_scripts": [
            {
              "matches": ["http://*.netflix.com/*"],
              "js": ["libs/jquery-2.0.3.min.js", "js/ratings.js"]
            }
        ],
    "permissions": [
        "http://www.omdbapi.com/*",
        "http://*.netflix.com/*"
    ],
    "web_accessible_resources": [
        "css/ratings.css",
        "img/imdbSprite.png",
        "img/tomatoSprite.png"
    ],

    "icons": {
           "48": "img/netflix-48.png",
          "128": "img/netflix-128.png" 
    }
}